<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle"
            android:useLevel="false">
            <gradient android:angle="315" android:endColor="#888888" android:startColor="#888888" />
            <stroke android:width="2dp" android:color="#faf7fa" />
            <size android:width="30dp" android:height="20dp"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"
            android:useLevel="false">
            <gradient android:angle="315" android:endColor="#7d5a7d" android:startColor="#7d5a7d" />
            <stroke android:width="2dp" android:color="#faf7fa" />
            <size android:width="30dp" android:height="20dp"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"
            android:useLevel="false">
            <gradient android:angle="315" android:endColor="#00000000" android:startColor="#00000000" />
            <stroke android:width="2dp" android:color="#faf7fa" />
            <size android:width="30dp" android:height="20dp"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

</selector>