<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@mipmap/bg3">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:textColor="#faf7fa"
            android:text="电视遥控"/>
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="44dp"
            android:id="@+id/back_button"
            android:background="#00000000"
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:src="@drawable/button_back" />
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="44dp"
            android:id="@+id/user_button"
            android:background="#00000000"
            android:layout_marginLeft="310dp"
            android:layout_centerVertical="true"
            android:src="@drawable/button_user" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageButton
            android:id="@+id/tvoff_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:src="@drawable/button_off"/>
        <ImageButton
            android:id="@+id/tvput_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:src="@drawable/tv_put"/>
        <ImageButton
            android:id="@+id/tvhome_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:src="@drawable/tv_home"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageButton
            android:id="@+id/tvmenu_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:src="@drawable/tv_menu"/>
        <ImageButton
            android:id="@+id/tvback_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:src="@drawable/tv_back"/>
        <ImageButton
            android:id="@+id/tvsilent_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:src="@drawable/tv_silent"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="7dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="66dp">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/tv_ch_up_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#00000000"
            android:src="@drawable/tv_ch_up"
            android:layout_centerVertical="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6" />
        <ImageButton
            android:id="@+id/tv_vol_up_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#00000000"
            android:src="@drawable/tv_vol_up"
            android:layout_centerVertical="true" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="66dp">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/tv_ch_down_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#00000000"
            android:src="@drawable/tv_ch_down"
            android:layout_centerVertical="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6" />
        <ImageButton
            android:id="@+id/tv_vol_down_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#00000000"
            android:src="@drawable/tv_vol_down"
            android:layout_centerVertical="true" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <ImageButton
            android:id="@+id/tv_ok_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="#00000000"
            android:src="@drawable/tv_ok" />

        <ImageButton
            android:id="@+id/tv_left_button"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:background="#00000000"
            android:src="@drawable/tv_left"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/tv_ok_button" />

        <ImageButton
            android:id="@+id/tv_right_button"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:background="#00000000"
            android:src="@drawable/tv_right"
            android:layout_alignTop="@+id/tv_left_button"
            android:layout_toEndOf="@+id/tv_ok_button" />

        <ImageButton
            android:id="@+id/tv_above_button"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginLeft="130dp"
            android:background="#00000000"
            android:src="@drawable/tv_above"
            android:layout_above="@+id/tv_ok_button"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/tv_below_button"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginLeft="130dp"
            android:background="#00000000"
            android:src="@drawable/tv_below"
            android:layout_below="@+id/tv_ok_button"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/tv_more_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:background="#00000000"
            android:src="@drawable/tv_more" />
        <ImageButton
            android:id="@+id/tv_number_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00000000"
            android:layout_marginLeft="200dp"
            android:src="@drawable/tv_number"/>
    </LinearLayout>


</LinearLayout>
