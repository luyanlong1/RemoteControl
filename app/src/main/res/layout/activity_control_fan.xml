<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@mipmap/bg4">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:textColor="#faf7fa"
            android:text="风扇遥控"/>
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="44dp"
            android:id="@+id/back_button"
            android:background="#00000000"
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:src="@drawable/button_back" />
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="44dp"
            android:id="@+id/user_button"
            android:background="#00000000"
            android:layout_marginLeft="310dp"
            android:layout_centerVertical="true"
            android:src="@drawable/button_user" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="197dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/fan_time_view"
                        android:layout_width="101dp"
                        android:layout_height="wrap_content"
                        android:textSize="40dp"
                        android:text="00:00"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="30dp"
                        android:textColor="#faf7fa"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="1">
                    <ImageView
                        android:id="@+id/fan_wind_type_view"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@mipmap/fan_normal_icon"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预约关闭时间"
                        android:textSize="15dp"
                        android:layout_marginLeft="40dp"
                        android:textColor="#faf7fa" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="风类"
                        android:textSize="15dp"
                        android:textColor="#faf7fa"
                        android:layout_marginLeft="65dp"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="#96a19f">
        <TextView
            android:id="@+id/fan_wind_level_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#ec5d63"
            android:layout_gravity="center"/>
        <SeekBar
            android:id="@+id/fan_wind_level_bar"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:max="12"
            android:maxHeight="10dp"
            android:progressDrawable="@drawable/seekbar_background"
            android:thumb="@drawable/seekbar_thumb"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="   1档                                                                  12档"
            android:textSize="15dp"
            android:textColor="#faf7fa"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/fan_normal_wind_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:src="@drawable/fan_normal_wind"/>
        <ImageButton
            android:id="@+id/fan_nature_wind_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:src="@drawable/fan_nature_wind"/>
        <ImageButton
            android:id="@+id/fan_sleep_wind_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:src="@drawable/fan_sleep_wind"/>
        <ImageButton
            android:id="@+id/fan_silent_wind_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:src="@drawable/fan_silent_wind"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageButton
            android:id="@+id/fan_off_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:src="@drawable/fan_off"/>
        <ImageButton
            android:id="@+id/fan_shake_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:src="@drawable/fan_shake"/>
        <ImageButton
            android:id="@+id/fan_clock_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:src="@drawable/fan_clock"/>
    </LinearLayout>

</LinearLayout>
