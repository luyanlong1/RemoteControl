<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@mipmap/bg4">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:textColor="#faf7fa"
            android:text="灯光遥控"/>
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="44dp"
            android:id="@+id/back_button"
            android:background="#00000000"
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:src="@drawable/button_back" />
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="44dp"
            android:id="@+id/user_button"
            android:background="#00000000"
            android:layout_marginLeft="310dp"
            android:layout_centerVertical="true"
            android:src="@drawable/button_user" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="219dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="165dp"
                android:layout_height="137dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/light_brightness_view"
                        android:layout_width="101dp"
                        android:layout_height="wrap_content"
                        android:textSize="60dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="30dp"
                        android:textColor="#faf7fa"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="67dp"
                        android:text="%"
                        android:textSize="35dp"
                        android:layout_marginTop="1dp"
                        android:textColor="#faf7fa"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="亮度  "
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textColor="#faf7fa"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/light_now_color_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="55dp"
                    android:background="#faf7fa"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="光色"
                    android:textSize="15dp"
                    android:textColor="#faf7fa"
                    android:layout_gravity="center"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/light_off_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:src="@drawable/fan_off" />
        <SeekBar
            android:id="@+id/light_level_bar"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:max="100"
            android:maxHeight="10dp"
            android:progressDrawable="@drawable/seekbar_background"
            android:thumb="@drawable/seekbar_thumb"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

</LinearLayout>
