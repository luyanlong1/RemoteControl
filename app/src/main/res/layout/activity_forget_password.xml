<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@mipmap/bg3">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:textColor="#faf7fa"
            android:text="找回密码"/>
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="44dp"
            android:id="@+id/back_button"
            android:background="#00000000"
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:src="@drawable/button_back" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp" />
    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/mobile_phone_png"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:hint="手机"
            android:background="@null"
            android:textColor="#faf7fa"
            android:textColorHint="#d6dddf"
            android:textSize="15dp"
            android:inputType="number"
            android:shadowColor="#faf7fa"
            android:textCursorDrawable="@null"/>
    </LinearLayout>
    <View
        android:layout_width="310dp"
        android:layout_height="1dp"
        android:background="#d6dddf"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/security_code_png"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/security_code"
            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:hint="验证码"
            android:background="@null"
            android:textColor="#faf7fa"
            android:textColorHint="#d6dddf"
            android:textSize="15dp"
            android:inputType="number"
            android:shadowColor="#faf7fa"
            android:textCursorDrawable="@null"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="获取验证码"
            android:textColor="#faf7fa"
            android:textSize="15dp"
            android:background="#9998a1" />
    </LinearLayout>
    <View
        android:layout_width="310dp"
        android:layout_height="1dp"
        android:background="#d6dddf"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/password_png"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/new_password_number1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:hint="新密码"
            android:background="@null"
            android:textColor="#faf7fa"
            android:textColorHint="#d6dddf"
            android:textSize="15dp"
            android:inputType="textPassword"
            android:shadowColor="#faf7fa"
            android:textCursorDrawable="@null"/>
    </LinearLayout>
    <View
        android:layout_width="310dp"
        android:layout_height="1dp"
        android:background="#d6dddf"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/password_png"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/new_password_number2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:hint="重复密码"
            android:background="@null"
            android:textColor="#faf7fa"
            android:textColorHint="#d6dddf"
            android:textSize="15dp"
            android:inputType="textPassword"
            android:shadowColor="#faf7fa"
            android:textCursorDrawable="@null"/>
    </LinearLayout>
    <View
        android:layout_width="310dp"
        android:layout_height="1dp"
        android:background="#d6dddf"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/login"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:text="完成"
        android:elevation="0dp"
        android:padding="12px"
        android:background="@drawable/button_login"
        android:textColor="#faf7fa"
        android:textSize="18dp"/>
</LinearLayout>


